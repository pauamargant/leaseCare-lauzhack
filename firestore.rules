rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection - authenticated users can read/write their own profile
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Leases collection - authenticated users can access their own leases
    match /leases/{leaseId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Evidence collection - authenticated users can access evidence
    match /evidence/{evidenceId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Chat history - authenticated users can access chat history
    match /chats/{chatId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}
